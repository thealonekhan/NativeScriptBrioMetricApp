<Page xmlns="http://schemas.nativescript.org/tns.xsd">
    <StackLayout class="p-20">
        <Label text="Create Account" class="h1 text-center"/>
        
        <TextField id="regUsername" hint="Username" class="input"/>
        <TextField id="regPassword" hint="Password" secure="true" class="input"/>
        <TextField id="regConfirmPassword" hint="Confirm Password" secure="true" class="input"/>
        
        <Button text="Register" class="btn btn-primary" tap="onRegisterTap"/>
        <Button text="Cancel" class="btn btn-outline" tap="onCancelTap"/>
    </StackLayout>
</Page>